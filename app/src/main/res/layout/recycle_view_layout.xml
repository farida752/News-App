<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:padding="8dp"
    >
    <ImageView
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:id="@+id/image_article"
        android:src="@drawable/ic_launcher_background"
        android:layout_marginBottom="8dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title :"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        android:id="@+id/text_view_title_text"
        android:layout_below="@id/image_article"
        android:layout_marginBottom="8dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"

        android:textSize="18sp"
        android:id="@+id/text_view_title"
        android:layout_below="@id/text_view_title_text"
        android:layout_marginBottom="8dp"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_down"
        android:id="@+id/image_arrow"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/image_article"
        android:layout_marginBottom="8dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/layout_expandaple"
        android:layout_below="@+id/text_view_title"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Section :"
            android:textSize="18sp"
            android:textStyle="bold"
            android:id="@+id/text_view_section_text"
            android:layout_marginBottom="8dp"
            android:textColor="#000000"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:id="@+id/text_view_section"
            android:layout_marginBottom="8dp"
            android:textColor="#000000"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Author Name :"
            android:textSize="18sp"
            android:textStyle="bold"
            android:id="@+id/text_view_author_name_text"
            android:layout_marginBottom="8dp"
            android:textColor="#000000"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:id="@+id/text_view_author_name"
            android:layout_marginBottom="8dp"
            android:textColor="#000000"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Publish Date :"
            android:textSize="18sp"
            android:textStyle="bold"
            android:id="@+id/text_view_publish_date_text"
            android:layout_marginBottom="8dp"
            android:textColor="#000000"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:id="@+id/text_view_publish_date"
            android:layout_marginBottom="8dp"
            android:textColor="#000000"

            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="see more"
            android:id="@+id/button_see_more"
            android:textColor="#000000"

            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000"/>

    </LinearLayout>

</RelativeLayout>